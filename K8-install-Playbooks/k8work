--- 
- 
  become: true
  gather_facts: false
  hosts: Master
  name: "Provisioning Worker node"
  tasks: 
    - 
      name: "get join command"
      register: join_command_raw
      shell: "kubeadm token create --print-join-command"
    - 
      name: "set join command"
      set_fact: 
        join_command: "{{ join_command_raw.stdout_lines[0] }}"
- 
  become: true
  hosts: Worker
  name: "Joining worker nodes"
  tasks: 
    - 
      args: 
        chdir: $HOME
        creates: node_joined.txt
      name: "join cluster"
      shell: "{{ hostvars['3.20.240.173'].join_command }} --ignore-preflight-errors all  >> node_joined.txt"

    - kubectl set-hostname worker-node"
      name: "Setting name"

